<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jar-extendido</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
			<includes>
				<include>br.com.glr.populis:sso-padrao</include>
			</includes>
			<unpackOptions>
				<excludes>
					<exclude>src/main/java/br/com/glr/populis/EPIService.class</exclude>
					<exclude>src/main/webapp/paginas/epi.xhtml</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp/paginas</directory>
			<outputDirectory>/META-INF/sso</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>